log4j.rootLogger=DEBUG, rollingFileAppender
log4j.appender.rollingFileAppender=org.apache.log4j.RollingFileAppender
log4j.appender.rollingFileAppender.File=flexmud.flexmud.log
log4j.appender.rollingFileAppender.MaxFileSize=100KB
log4j.appender.rollingFileAppender.MaxBackupIndex=1
log4j.appender.rollingFileAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.rollingFileAppender.layout.ConversionPattern=%-4r [%t] %-5p %c %x - %m%n